
@model PagedList.IPagedList<BTL_DiDongViet.Models.User>
@using PagedList.Mvc;

@using BTL_DiDongViet.Common;
@using BTL_DiDongViet.Models;
@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>List</title>
</head>
<body>
    @{
        var admin = (Admin)Session[CommonConstants.ADMIN_SESSION];

    }
    <p style="margin: 10px;">
        @Html.ActionLink("Tạo mới tài khoản người dùng", "Create")
    </p>
    @using (Html.BeginForm())
    {
        <div style="margin: 10px;">
            Tìm kiếm tài khoản
            <input type="text" name="searchString" />
            <input type="submit" value="Tìm" />
        </div>
    }

    <table class="table">
        <tr>
            <th>
                Tên đăng nhập
            </th>
            <th>
                Mật khẩu
            </th>
            <th>
                Họ tên
            </th>
            <th>
                Địa chỉ
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                Số điện thoại
            </th>
            <th>
                Trạng thái
            </th>
            <th>
                @Html.ActionLink("Ngày tạo", "List", new { sortOrder = ViewBag.XepTheoNgayTao })
            </th>
            <th>
                Người tạo
            </th>
            <th>
                @Html.ActionLink("Ngày sửa", "List", new { sortOrder = ViewBag.XepTheoNgay })
            </th>
            <th>
                Người chỉnh sửa
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Username)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreateBy)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ModifiedDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ModifiedBy)
                </td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.ID.ToString().Trim() })
                    @Html.ActionLink("Xóa", "Delete", new { id = item.ID.ToString().Trim() })

                </td>
            </tr>
        }

    </table>
    <br />
    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
    @Html.PagedListPager(Model, page => Url.Action("Display", new { page }))

</body>
</html>
