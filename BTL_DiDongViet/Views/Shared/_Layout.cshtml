                                    </g>
                                </svg>
                            </div>
                            Liên Hệ
                        </a>
                    </li>
                    @if (Session[CommonConstants.CLIENT_SESSION] != null)
                    {
                        var user = (UserLogin)(Session[CommonConstants.CLIENT_SESSION]);
                        <li class="navbar-list__item">
                            <i class="fas fa-user"></i>
                            <a href="" class="navbar-list__link">@user.Name</a>
                        </li>
                        <li class="navbar-list__item">
                            <i class="fas fa-sign-out-alt"></i>
                            <a href="@Url.Action("Logout", "Users")" class="navbar-list__link">Đăng xuất</a>
                        </li>
                    }
                    else
                    {
                        <li class="navbar-list__item">
                            <a href="@Url.Action("RegisterIndex", "Users")" class="navbar-list__link">Đăng Kí</a>
                        </li>
                        <li class="navbar-list__item">
                            <a href="@Url.Action("LoginIndex", "Users")"class="navbar-list__link">Đăng nhập</a>
                        </li>
                    }
                </ul>
            </nav>
        </div>
        <div class="grid">
            <div class="header-with-search">
                <!-- Header Search Begin -->
                <a class="header-with-search__logo-section" href="@Url.Action("Home", "Category")">
                    <img src="https://didongviet.vn/pub/media/logo/stores/1/logo-ddv.png" style="margin-right: 10px;">
                </a>
                <!-- Search Bar Begin -->
                <div class="search-bar">
                    <!-- Search Input Begin -->

                    <form action="/Users/Search" method="post" style="display: flex; width: 872px;">
                        <div class="search-input-wrapper">
                            <input class="clearable search-input" type="text" name="keyword" value="" placeholder="Nhấn để tìm kiếm sản phẩm">
                        </div>
                        <!-- Search Input End -->
                        <!-- Search Btn Begin -->
                        <button type="submit" name="button" class="search-btn">
                            <div class="search-wrapper">
                                <i class="fas fa-search"></i>
                            </div>
                        </button>
                    </form>
                  
                        <!-- Search Btn End -->
                    </div>
                <!-- Search Bar End -->
                <!-- Cart Begin -->
                <div class="cart-wrapper">
                    <div class="cart">
                        <a href="@Url.Action("Cart", "OrderDetail")" style="text-decoration: none">
                            <i class="fas fa-shopping-cart" style="font-size: 24px; color: white;"></i>
                        </a>
                    </div>
                </div>
                <!-- Cart End -->
            </div>
            <!-- Header Search End -->
        </div>
    </header>
    <div class="home-page-wrapper">
        <div class="home-page">
            <div class="product-category">
                <div class="container">
                    <div class="left">
                        <ul>
                            <li>
                                <a class="fas fa-mobile" href="@Url.Action("Category", "Category", new { @name = "Điện thoại" }) " style="text-decoration: none; font-size: 18px;"> Điện thoại</a>
                            </li>
                            <li>
                                <a class="fab fa-apple" href="@Url.Action("Category", "Category", new { @name = "Apple Iphone" }) " style="text-decoration: none; font-size: 18px;font-weight:bold;"> Apple Iphone</a>
                            </li>
                            <li>
                                <a class="fas fa-tablet-alt" href="@Url.Action("Category", "Category", new { @name = "Tablet" }) " style="text-decoration: none; font-size: 18px;"> Tablet</a>
                            </li>
                            <li>
                                <a class="far fa-clock" href="@Url.Action("Category", "Category", new { @name = "Đồng hồ" }) " style="text-decoration: none; font-size: 18px;font-weight:bold;"> Đồng hồ</a>
                                <span></span>
                            </li>
                            <li>
                                <a class="fas fa-keyboard" href="@Url.Action("Category", "Category", new { @name = "Phụ kiện" }) " style="text-decoration: none; font-size: 18px;"> Phụ kiện</a>
                            </li>
                            <li>
                                <a class="fas fa-sync-alt" href="@Url.Action("Category", "Category", new { @name = "Máy cũ giá rẻ" }) " style="text-decoration: none; font-size: 18px;"> Máy cũ giá rẻ</a>
                            </li>
                        </ul>
                    </div>
                    <div class="right">
                        <div class="wrapper">
                            <span>
                                <a href="@Url.Action("Display", "News", new { page = 1})" style="text-decoration: none;">Tin tức
                                    </a>
                            </span>
                        </div>
                        <div class="wrapper">
                            <span>
                                <a href="@Url.Action("Policy", "Information")" style="text-decoration: none;">
                                    Chính sách
                                </a>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
            @RenderBody()
        </div>
        <hr />
