    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Di Động Việt</title>
    <link rel="stylesheet" href="@Url.Content("~/assets/css/base.css")"  />
    <link rel="stylesheet" href="@Url.Content("~/assets/css/main.css")" />
