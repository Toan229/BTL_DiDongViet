
@model PagedList.IPagedList<BTL_DiDongViet.Models.Products>
@using PagedList.Mvc;

@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Tạo mới sản phẩm", "Create")
    </p>
    @using (Html.BeginForm())
    {
        <div style="margin: 10px;">
            Tìm kiếm tài khoản
            <input type="text" name="searchString" />
            <input type="submit" value="Tìm" />
        </div>
    }
    <table class="table">
        <tr>
            <th>
                Category
            </th>
            <th>
                @Html.ActionLink("Tên sản phẩm", "Index", new { sortOrder = ViewBag.XepTheoTen })
            </th>
            <th>
                Lưu trữ
            </th>
            <th>
                @Html.ActionLink("Giá", "Index", new { sortOrder = ViewBag.XepTheoGia })
            </th>
            <th>
                Màu sắc
            </th>
            <th>
                Giảm giá
            </th>
            <th>
                Số lượng có
            </th>
            <th>
                Ảnh
            </th>
            <th>
                Mô tả
            </th>
            <th>
                Phụ kiện
            </th>
            <th>
                Bảo hành
            </th>
            <th>
                Số lượng mua
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductCategory.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Storage)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Color)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sale)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    <img src="~/assets/img/ProductsImage/@item.Image" style="width:100px;" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sets)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Insurance)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumberOfPurchases)
                </td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.ID.ToString().Trim() })
                    @Html.ActionLink("Xóa", "Delete", new { id = item.ID.ToString().Trim() })
                </td>
            </tr>
        }

    </table>
    <br />
    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
</body>
</html>
