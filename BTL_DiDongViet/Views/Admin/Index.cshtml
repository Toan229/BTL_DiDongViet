
@model PagedList.IPagedList<BTL_DiDongViet.Models.Admin>
@using PagedList.Mvc;
@using BTL_DiDongViet.Models;
@using BTL_DiDongViet.Common;

@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
</head>
<body>
    @{
        var admin = (Admin)Session[CommonConstants.ADMIN_SESSION];

    }
    <p style="margin: 10px;">
        @Html.ActionLink("Tạo mới tài quản trị", "Create")
    </p>
    @using (Html.BeginForm())
    {
        <div style="margin: 10px;">
            Tìm kiếm tài khoản
            <input type="text" name="searchString" />
            <input type="submit" value="Tìm" />
        </div>
    }
    <table class="table">
        <tr>
            <th>
                Họ tên
            </th>
            <th>
                Tên đăng nhập
            </th>
            <th>
                Mật khẩu
            </th>
            <th>
                Quản lý
            </th>
            <th>
                Trạng thái
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Username)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>

                    @Html.ActionLink("Sửa", "Edit", new { id = item.ID.ToString().Trim() }) |

                    @if (admin != null && admin.Username != item.Username && admin.Type)
                    {
                        @Html.ActionLink("Xóa", "Delete", new { id = item.ID.ToString().Trim() })
                    }
                </td>
            </tr>
        }

    </table>
    <br />
    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
</body>
</html>
